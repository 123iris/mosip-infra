component: resident-app-server
activeProfileEnv: default
springConfigLabel: {{ config_repo.version }}
configServerUrl: {{ config_server.internal_url }}
exportLogs: enabled  # Let filebeat export the logs

ingress:
   namespace: default
artifactoryUrl: {{ artifactory_url }}
iamAdapterUrl: {{ iam_adapter_url }}
imagePullPolicy: Always

sitePublicUrl: {{ site.sandbox_public_url }}

isGlowroot: {{ is_glowroot }}

probe:
  period: 10 # Seconds
  timeout: 5
  livenessPeriod: 10
  failureThreshold: 30
  startupPeriod: 10
  initialDelaySeconds: 120

dockerHub:
  private: {{ docker.hub.private }}
  keyname: {{ docker.hub.keyname }}

services:
  resident:
    serviceName: {{ versions.services.resident-app-server.service.keys()[0] }}
    dockerImage: {{ versions.services.resident-app-server.service.values()[0] }}
    dockerTag: 1.0.10
    ports:
      containerPort: 8088
      servicePort: 80
    ingressPath: /v1/resident
    healthUrl: /v1/resident/actuator/health
    podconfig:
      {{ podconfig.resident.service | to_nice_yaml(indent=6) | indent(6) }}
    annotation: /v1/resident/actuator/prometheus
